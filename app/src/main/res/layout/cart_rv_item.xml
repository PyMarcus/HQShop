<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/g_white"
    android:layout_marginBottom="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >
        <ImageView
            android:id="@+id/img_ad"
            android:layout_width="55dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@color/g_blue"
            />

        <TextView
            android:id="@+id/tv_ad_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:text="One Punch Man"
            app:layout_constraintStart_toEndOf="@id/img_ad"
            app:layout_constraintTop_toTopOf="@id/img_ad"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_ad_price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:text="R$ 56,66"
            app:layout_constraintStart_toStartOf="@id/tv_ad_name"
            app:layout_constraintTop_toBottomOf="@id/tv_ad_name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"/>


        <ImageView
            android:id="@+id/plus"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_plus"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:text="666"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/plus"
            app:layout_constraintTop_toBottomOf="@id/plus"
            app:layout_constraintBottom_toTopOf="@id/minus"
            app:layout_constraintStart_toStartOf="@id/plus"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"/>

        <ImageView
            android:id="@+id/minus"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_minus"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="@id/plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>